<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:layoutDirection="rtl"
    tools:context="com.example.shabnammoazam.foooooooood.AddressMeActivity">


    <android.support.v7.widget.CardView
        android:layout_alignParentTop="true"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ru.katso.livebutton.LiveButton

                xmlns:livebutton="http://schemas.android.com/apk/res-auto"
                android:id="@+id/btn_Address_me"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:text="ادرس جدید"
                android:textColor="@android:color/white"
                android:textSize="18dp"
                livebutton:backgroundColor="@color/startblue"
                livebutton:cornerRadius="4dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"

                android:background="@drawable/mapadressme">

            </LinearLayout>

        </RelativeLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/listAdrress_Me"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="60dp"
            android:background="@color/fbutton_color_transparent" />


    </android.support.v7.widget.CardView>






























</RelativeLayout>


