<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="0dp"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layoutDirection="rtl"
    android:id="@+id/resCartView">


    <LinearLayout
        android:orientation="vertical"

        android:weightSum="7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <ImageView

            android:id="@+id/resturant_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4.9"
            android:scaleType="centerCrop"
            android:src="@drawable/foodfilterbackground" />


        <TextView

            android:id="@+id/resturantName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="نام رستوران"
            android:textColor="@color/colorAccent"
            android:textSize="20dp" />

            <TextView
                android:layout_weight="1.1"
                android:layout_below="@+id/resturantName"
                android:id="@+id/resturantAddress"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@android:color/black"
                android:text="آدرس رستوران"
                android:textSize="15dp"
                android:gravity="center"

                />





</LinearLayout>

</android.support.v7.widget.CardView>