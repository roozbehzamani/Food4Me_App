<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="rtl"
    android:layout_margin="8dp"
    android:id="@+id/cartCardView"
    android:background="#30333639">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/food"
            android:background="#30333639"
            android:weightSum="6.4"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout

                android:gravity="center"
                android:layout_gravity="right"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">


                <com.makeramen.roundedimageview.RoundedImageView

                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imgCartItem"
                    android:src="@drawable/homedrawer"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="30dip"
                    app:riv_border_width="4dip"
                    app:riv_border_color="#fff"
                    app:riv_oval="true"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>


            </RelativeLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:weightSum="2"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom">

                    <TextView
                        android:id="@+id/txtCartItemName"
                        android:textSize="16sp"
                        android:text="نام گل"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="top">

                    <TextView
                        android:id="@+id/txtCartItemPlaceName"
                        android:textSize="16sp"
                        android:text="نام گل فروشی"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:weightSum="4"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/imgCartItemAddCount"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_drop_up_black_24dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" />




                <TextView
                    android:background="@android:color/transparent"
                    android:layout_weight="2"
                    android:id="@+id/txtCartItemCount"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:text="1"
                    android:textSize="20sp" />



                <ImageButton
                    android:id="@+id/imgCartItemMinesCount"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" />


            </LinearLayout>



            <RelativeLayout
                android:layout_weight="1.9"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtCartItemPrice"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="1.1"
                    android:textSize="18sp"
                    android:text="20,000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <ImageButton
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_cancel_black_24dp_cart"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="-10dp"
                    android:layout_marginLeft="-11dp"/>




            </RelativeLayout>









        </LinearLayout>





    </RelativeLayout>

</android.support.v7.widget.CardView>
