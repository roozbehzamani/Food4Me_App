<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8">

    <RelativeLayout
        android:layout_weight="2.5"
        android:background="@drawable/editfooooood"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight=".2"
        android:background="#f8d9a3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="4.8"
        android:weightSum="8.2"
        android:background="@drawable/backgroun"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_weight=".1"
            android:layout_width="match_parent"
            android:layout_height="0dp"></RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"

            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/white">

            <Spinner
                android:id="@+id/spUserAccess"
                android:textColorHint="@color/base"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/sNumberRelativeLayout"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:background="@android:color/white">

            <EditText
                android:id="@+id/edtSNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:drawableLeft="@drawable/ic_iconfinder_id"
                android:gravity="right"
                android:hint="شماره ی دانشجویی"
                android:inputType="phone"
                android:maxLength="11"
                android:padding="10dp"
                android:textCursorDrawable="@null"
                android:textSize="18dp" />

        </RelativeLayout>

        <RelativeLayout

            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:background="@android:color/white">

            <EditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:drawableLeft="@drawable/ic_phone_android_black_24dp"
                android:gravity="right"
                android:hint="شماره تلفن همراه"
                android:inputType="phone"
                android:maxLength="11"
                android:padding="10dp"
                android:textCursorDrawable="@null"
                android:textSize="18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </RelativeLayout>

        <RelativeLayout

            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:background="@android:color/white">

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:gravity="right"
                android:hint="رمز عبور"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textCursorDrawable="@null"
                android:textDirection="rtl"
                android:textSize="18dp" />

        </RelativeLayout>
        <RelativeLayout

            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:background="@android:color/white">

            <EditText
                android:id="@+id/edtemail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:drawableLeft="@drawable/ic_emailsignup"
                android:gravity="right"
                android:hint="ایمیل"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textCursorDrawable="@null"
                android:textDirection="rtl"
                android:textSize="18dp" />

        </RelativeLayout>
        <RelativeLayout

            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:background="@android:color/white">

            <LinearLayout
                android:weightSum="2.1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/edtFamily"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:drawableLeft="@drawable/ic_namesignup"
                    android:gravity="right"
                    android:hint="نام خانوادگی"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textCursorDrawable="@null"
                    android:textDirection="rtl"
                    android:textSize="18dp" />
                <RelativeLayout
                    android:layout_weight=".1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"></RelativeLayout>
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/edtName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:drawableLeft="@drawable/ic_namesignup"
                    android:gravity="right"
                    android:hint="نام"
                    android:inputType="textPersonName"
                    android:padding="10dp"
                    android:textCursorDrawable="@null"
                    android:textDirection="rtl"
                    android:textSize="18dp" />


            </LinearLayout>



        </RelativeLayout>
        <RelativeLayout
            android:layout_weight=".3"
            android:layout_width="match_parent"
            android:layout_height="0dp"></RelativeLayout>
        <RelativeLayout

            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E12929"
                android:text="ثبت نام"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout

        android:layout_weight="1.5"
        android:background="#f8d9a3"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </RelativeLayout>







</LinearLayout>
