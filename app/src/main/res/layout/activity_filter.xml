<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="25dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shabnammoazam.foooooooood.FilterActivity"
    android:weightSum="10"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:background="@android:color/transparent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8"
        android:layout_margin="8dp"
        android:id="@+id/cart1CardView"
        app:cardElevation="15dp"
        app:cardCornerRadius="10dp"
        android:background="@android:color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnFilter"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/shap_left"
                android:text="فیلتر"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <Button
                android:paddingLeft="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_updown"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/shap_right"
                android:text="قیمت"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:id="@+id/btnSordPrice"/>


        </LinearLayout>





    </android.support.v7.widget.CardView>



    <android.support.v7.widget.RecyclerView
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9.2"
        android:id="@+id/recyclerFoodFilter"/>

</LinearLayout>
