<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:weightSum="6.2"
    android:background="@color/overlayBackground"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">




<RelativeLayout
    android:layout_weight=".85"
    android:layout_width="match_parent"
    android:layout_height="0dp"></RelativeLayout>

    <com.makeramen.roundedimageview.RoundedImageView
        android:layout_gravity="center"
        android:layout_weight="3.2"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imageDrawer"
        android:src="@drawable/homedrawer"
        android:scaleType="centerCrop"
        app:riv_corner_radius="30dip"
        app:riv_border_width="2dip"
        app:riv_border_color="#333333"
        app:riv_oval="true"
        android:layout_width="100dp"
        android:layout_height="0dp"/>

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="top"
        android:weightSum="4"
        android:layout_weight=".95"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <TextView
            android:textSize="17sp"
            android:layout_weight="4"
            android:id="@+id/txtFullName"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="شبنم"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="top"
        android:weightSum="4"
        android:layout_weight=".95"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">


    <TextView

        android:textSize="17sp"
        android:gravity="top"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="اعتبار شما:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView

        android:textSize="16sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight=".9"
        android:id="@+id/txtWalletPrice"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="7950000"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


</LinearLayout>

    <RelativeLayout
        android:layout_weight="0.15"
        android:layout_width="match_parent"
        android:layout_height="0dp"></RelativeLayout>

    <RelativeLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/food"
        android:id="@+id/whiteLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"/>



</LinearLayout>
